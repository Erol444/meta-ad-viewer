{
  "manifest_version": 3,
  "name": "SpyDelta Competition Spy",
  "version": "0.1.0",
  "description": "Analyze the current page to find Facebook/Instagram links and check for Meta ads.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.facebook.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Analyze Page Ads",
    "default_icon": {
      "16": "assets/favicon.png",
      "32": "assets/favicon.png",
      "48": "assets/favicon.png",
      "128": "assets/favicon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/fb_sprite.png",
        "assets/fb_sprite_others.png",
        "assets/sprite-network.png",
        "sidepanel.html",
        "sidepanel.css",
        "sidepanel.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
} 