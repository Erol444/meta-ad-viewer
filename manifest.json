{
  "manifest_version": 3,
  "name": "Meta Ad Library Shortcut",
  "version": "1.0.0",
  "description": "Tired of digging through the Meta Ad Library every time you visit a competitor's site? This extension streamlines your ad research!",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.facebook.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Find Meta Ads",
    "default_icon": {
      "16": "assets/favicon.png",
      "32": "assets/favicon.png",
      "48": "assets/favicon.png",
      "128": "assets/favicon.png"
    }
  },
  "icons": {
    "16": "assets/favicon.png",
    "32": "assets/favicon.png",
    "48": "assets/favicon.png",
    "128": "assets/favicon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/fb_sprite.png",
        "assets/fb_sprite_others.png",
        "assets/sprite-network.png",
        "sidepanel.html",
        "sidepanel.css",
        "sidepanel.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}